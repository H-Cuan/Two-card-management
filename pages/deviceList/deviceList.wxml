<view wx:if="{{show}}" style="width: 100%;height: 100%;background-color:rgba(0,0,0,0.5);z-index: 1;position: absolute;"></view>
<view  wx:if="{{show}}" style="display: flex;flex-wrap: wrap;justify-content: center;align-items: center; position: fixed;z-index: 222;border-radius: 15px; width: 80%;height: 30%;background-color: #fff;margin: 50% 10% 50% 10%; border: 1px #ccc solid;">
<view style="font-size: 1.1em;display: flex;justify-content: center;">绑定设备</view>
<view style="font-size: 18px; width: 100%;display: flex;justify-content:center;align-items: center;">
<view>
  SN:
</view>
<input  bindinput="bangdingshebei"  value="{{deviceId}}" placeholder="请输入设备号" type="text"/>
</view>
<view style="display: flex;justify-content: center; width: 100%;">
  <button bindtap="cancel" style="width: 40%; margin-right: -1%; color: #2188FE;background-color: #fff;border: 1px #2188FE solid;">取消</button>
  <button bindtap="confirm" style="width: 40%; color: #fff;background-color: #2188FE;">确认</button>
</view>
</view>
<view>
  <view  style="display: flex;justify-content: center;height: 100%;flex-wrap: wrap;">
  <view wx:if="{{remove}}" style="width: 90%;background-color: #fff;margin-top: 10%;height: 40px;border-radius: 10px;display: flex;align-items: center;">
    <view style="padding: 10px;">已绑定设备: {{deviceID}}</view>
  </view>
  <view style="width: 100%;">
  <button wx:if="{{remove}}" bindtap="removeDevice" style="width: 80%;margin-top: 20%;background-color: red;color: #fff;">解除绑定</button>
  <button wx:if="{{bind}}" bindtap="bindDevice" style="width: 80%;margin-top: 20%;background-color: #2188FE;color: #fff;">绑定设备</button>
</view>
</view>
</view>

