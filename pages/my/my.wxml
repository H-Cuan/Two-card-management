<!--pages/my/my.wxml-->
<view wx:if="{{show}}" style="width: 100%;height: 100%;background-color:rgba(0,0,0,0.5);z-index: 1;position: absolute;"></view>
<image class="img" src="../../img/mybackground.png" mode=""/>
<view class="wwww">
<view class="container">
<view style="position: absolute;display: flex;margin-left: -10%;">
  <image style="height: 80px;width: 80px;border-radius: 100px;" bindtap="changeAvatar" src="{{image}}" mode=""/>
  <view style="color: #fff;margin-left: 20px;">
  <view style="font-size: 20px;margin-bottom: -10px;width: 200px;word-wrap: break-word;">
  {{name}}
  </view>
  <view style="margin-top: 15%;">{{tel}}</view>
  </view>
</view>
  <view style="background-color: #fff;width: 100%;height: 100%;position: absolute;margin-top: 30%;border-radius: 20px;display: flex;justify-content: center;align-items: center;flex-wrap: wrap;">
    <view bindtap="changePassword" style="width: 90%;height: 40px;display: flex;justify-content: space-between;align-items: center;">
     <view style="display: flex;align-items: center;"><image src="../../img/mima.png" style="height: 30px;width: 30px;margin-right: 10px;" mode=""/>修改密码</view>
     <image src="../../img/uTools_1683194093912.png" style="height: 14px;width: 14px;" mode=""/>
    </view>
    <view bindtap="bindingDevice" style="width: 90%;height: 40px;display: flex;margin-top: -10%; justify-content: space-between;align-items: center;">
     <view style="display: flex;align-items: center;"><image src="../../img/bangding.png" style="height: 30px;width: 30px;margin-right: 10px;" mode=""/>绑定设备</view>
     <image src="../../img/uTools_1683194093912.png" style="height: 14px;width: 14px;" mode=""/>
    </view>
    <view bindtap="exit" style="width: 90%;height: 40px;display: flex;margin-top: -10%; justify-content: space-between;align-items: center;">
     <view style="display: flex;align-items: center;"><image src="../../img/exit.png" style="height: 30px;width: 30px;margin-right: 10px;" mode=""/>退出登录</view>
     <image src="../../img/uTools_1683194093912.png" style="height: 14px;width: 14px;" mode=""/>
    </view>
  </view>
  <view wx:if="{{show}}" style="display: flex;flex-wrap: wrap;justify-content: center;align-items: center; position: fixed;z-index: 222;border-radius: 15px; width: 80%;height: 30%;background-color: #fff;margin: 50% 10% 50% 10%; border: 1px #ccc solid;">
<view style="font-size: 1.1em;display: flex;justify-content: center;">绑定设备</view>
<view style="font-size: 18px; width: 100%;display: flex;justify-content:center;align-items: center;">
<view>
  SN:
</view>
<input  bindinput="bangdingshebei"  value="{{deviceId}}" placeholder="请输入设备号" type="text"/>
</view>
<view style="display: flex;justify-content: center; width: 100%;">
  <button bindtap="cancel" style="width: 40%; margin-right: -1%; color: #2188FE;background-color: #fff;border: 1px #2188FE solid;">取消</button>
  <button bindtap="confirm" style="width: 40%; color: #fff;background-color: #2188FE;">确认</button>
</view>
</view>
</view>
</view>
