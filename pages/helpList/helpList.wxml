  <view class="body">
  <view wx:if="{{typeShow}}" style="width: 100%;height: 120%;background-color:rgba(0,0,0,0.5);z-index: 55;position: fixed;"></view>
  <view class="container">
<view wx:if="{{typeShow}}" style="display: flex;flex-wrap: wrap;justify-content: center;align-items: center; position: fixed;z-index: 222;border-radius: 15px; width: 80%;height: 25%;background-color: #fff;margin: 60% 10% 50% 10%;">
<view style="font-size: 1.3em;font-weight: 600;display: flex;justify-content: center;">核验类型</view>
<view style="font-size: 18px; width: 100%;display: flex;justify-content:space-around;align-items: center;">
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{mchList}}" range-key='name'>
                <view style="display: flex;"> <view style="font-weight: 600;">请选择:</view>  {{mchList[index].name}}</view>
              </picker>
