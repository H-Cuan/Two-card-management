
<view class="page">
 
 
 <!--顶部导航栏-->
  
 <view class="swiper-tab">
  
 <view class="tab-item {{currentTab==0 ? 'on' : ''}}" data-current="0" bindtap="swichNav">身份核验</view>
  
 <view class="tab-item {{currentTab==1 ? 'on' : ''}}" data-current="1" bindtap="swichNav">办卡核验</view>
  
  
 </view>
  
  
 <!--内容主体-->
  
 <swiper class="swiper" current="{{currentTab}}" duration="200" bindchange="swiperChange">

  
